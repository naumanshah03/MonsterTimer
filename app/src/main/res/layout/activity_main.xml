<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_lg"
            android:paddingBottom="@dimen/spacing_md">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¹ Monster Timer"
                android:textAppearance="@style/TextAppearance.MonsterTimer.Headline"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Manage screen time with fun"
                android:textAppearance="@style/TextAppearance.MonsterTimer.Caption" />
        </LinearLayout>

        <!-- Stats Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MonsterTimer.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_variant"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/card_header_padding_horizontal"
                    android:paddingVertical="@dimen/card_header_padding_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Today's Stats"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.SectionTitle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/statsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="Loading..."
                    android:textAppearance="@style/TextAppearance.MonsterTimer.Body" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Monitoring Control Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MonsterTimer.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_variant"
                    android:paddingHorizontal="@dimen/card_header_padding_horizontal"
                    android:paddingVertical="@dimen/card_header_padding_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monitoring_active"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.SectionTitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/monitoringSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Shorts Monitoring"
                        android:checked="true"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/monitoring_caption"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.Caption" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Permission Status Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MonsterTimer.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_variant"
                    android:paddingHorizontal="@dimen/card_header_padding_horizontal"
                    android:paddingVertical="@dimen/card_header_padding_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”’ Permissions"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.SectionTitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="Checking permissions..."
                        android:textAppearance="@style/TextAppearance.MonsterTimer.Body" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/accessibilityButton"
                        style="@style/Widget.MonsterTimer.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="Enable Accessibility Service"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/overlayButton"
                        style="@style/Widget.MonsterTimer.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Overlay Permission"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Timer Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MonsterTimer.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_variant"
                    android:paddingHorizontal="@dimen/card_header_padding_horizontal"
                    android:paddingVertical="@dimen/card_header_padding_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸ Timer Duration"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.SectionTitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/timerValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 minutes"
                        android:textColor="@color/primary"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/timerTypeRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/sliderRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slider" />

                        <RadioButton
                            android:id="@+id/manualRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manual" />
                    </RadioGroup>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/timerSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:stepSize="1"
                        android:valueFrom="0"
                        android:valueTo="4"
                        app:labelBehavior="gone" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/manualTimerInputLayout"
                        style="@style/Widget.MonsterTimer.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter minutes"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/manualTimerEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Time allowed on Shorts before monster appears"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.Caption"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PIN Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MonsterTimer.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_variant"
                    android:paddingHorizontal="@dimen/card_header_padding_horizontal"
                    android:paddingVertical="@dimen/card_header_padding_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” Parent PIN"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.SectionTitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pinInputLayout"
                        style="@style/Widget.MonsterTimer.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter 4-digit PIN"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pinEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:text="1234" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Used to bypass the monster overlay"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.Caption" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Monster Gallery Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MonsterTimer.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_variant"
                    android:paddingHorizontal="@dimen/card_header_padding_horizontal"
                    android:paddingVertical="@dimen/card_header_padding_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¾ Monster Gallery (max 5)"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.SectionTitle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monsterRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:minHeight="@dimen/monster_item_size"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addMonsterButton"
                        style="@style/Widget.MonsterTimer.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/add_monster"
                        app:icon="@android:drawable/ic_menu_add"
                        app:iconGravity="textStart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Add scary images or videos to show when time's up"
                        android:textAppearance="@style/TextAppearance.MonsterTimer.Caption" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/Widget.MonsterTimer.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="ðŸ’¾ Save All Settings"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
